# n8n basic auth credentials
N8N_USER=admin
N8N_PASSWORD=your-n8n-password

# n8n API key (generate from n8n Settings > API > Create API Key)
N8N_API_KEY=

# Slack channel for n8n automation notifications
SLACK_AUTOMATION_CHANNEL=#automation
