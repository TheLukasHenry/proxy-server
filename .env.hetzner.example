# =============================================================================
# MCP Proxy - Hetzner Deployment Environment Variables
# =============================================================================
#
# Copy this file to .env and fill in your values:
#   cp .env.hetzner.example .env
#   nano .env
#
# =============================================================================

# =============================================================================
# DATABASE
# =============================================================================
# PostgreSQL password (generate with: openssl rand -hex 16)
POSTGRES_PASSWORD=generate-a-strong-password-here

# =============================================================================
# SECRETS
# =============================================================================
# Generate with: openssl rand -hex 32
WEBUI_SECRET_KEY=generate-a-random-secret-key-here

# MCP API Key (for inter-service communication)
MCP_API_KEY=generate-another-random-key-here

# =============================================================================
# OPENAI / LLM
# =============================================================================
OPENAI_API_KEY=your-openai-api-key
OPENAI_API_BASE_URL=https://api.openai.com/v1

# =============================================================================
# MICROSOFT ENTRA ID (Azure AD) - OAuth Configuration
# =============================================================================
# Get these from: Azure Portal > App Registrations > Your App
MICROSOFT_CLIENT_ID=your-client-id
MICROSOFT_CLIENT_SECRET=your-client-secret

# Tenant ID: Use "consumers" for personal Microsoft accounts
# Or use your Azure AD tenant ID for organizational accounts
MICROSOFT_TENANT_ID=consumers

# =============================================================================
# OAUTH SETTINGS
# =============================================================================
# Base URL for your Open WebUI instance (used for OAuth redirect URIs)
WEBUI_URL=https://ai-ui.yourdomain.com

# Enable OAuth signup (required for Microsoft login button to appear)
ENABLE_OAUTH_SIGNUP=true

# OpenID Connect discovery URL (auto-constructed from tenant)
OPENID_PROVIDER_URL=https://login.microsoftonline.com/consumers/v2.0/.well-known/openid-configuration

# Post-logout redirect URL
WEBUI_AUTH_SIGNOUT_REDIRECT_URL=https://ai-ui.yourdomain.com/auth

# =============================================================================
# AZURE APP REGISTRATION - REQUIRED CALLBACK URL
# =============================================================================
# Add this redirect URI in Azure Portal > App Registration > Authentication:
#   https://ai-ui.yourdomain.com/oauth/microsoft/callback
#
# This is REQUIRED for Microsoft login to work!
# =============================================================================

# =============================================================================
# ADMIN
# =============================================================================
# Comma-separated list of admin emails (can access Admin Portal)
ADMIN_EMAILS=admin@example.com

# =============================================================================
# MCP SERVER API KEYS
# =============================================================================
# GitHub Personal Access Token (for GitHub MCP tools)
GITHUB_TOKEN=

# Notion API Key (for Notion MCP tools)
NOTION_API_KEY=

# =============================================================================
# ATLASSIAN (Jira/Confluence) - Official Remote MCP
# =============================================================================
# Get these from: https://id.atlassian.com/manage-profile/security/api-tokens
ATLASSIAN_API_KEY=
ATLASSIAN_ORG_ID=
ATLASSIAN_URL=https://your-org.atlassian.net/
ATLASSIAN_USER=your-email@example.com

# =============================================================================
# CLICKUP - Task Management
# =============================================================================
# Get from: ClickUp Settings > Apps > API Token
CLICKUP_API_TOKEN=

# =============================================================================
# TRELLO - Kanban Boards
# =============================================================================
# Get from: https://trello.com/app-key
TRELLO_API_KEY=
TRELLO_API_TOKEN=

# =============================================================================
# SONARQUBE - Code Quality
# =============================================================================
# Get from: SonarQube > My Account > Security > Tokens
SONARQUBE_TOKEN=
SONARQUBE_URL=https://sonarcloud.io

# =============================================================================
# OTHER MCP SERVERS (add as needed)
# =============================================================================
# LINEAR_API_KEY=

# =============================================================================
# N8N WORKFLOW ENGINE
# =============================================================================
N8N_WEBHOOK_URL=https://ai-ui.coolestdomain.win/n8n/
N8N_USER=admin
N8N_PASSWORD=

# n8n API key (generate from n8n Settings > API > Create API Key)
N8N_API_KEY=

# =============================================================================
# NOTION MCP SERVER
# =============================================================================
NOTION_API_KEY=
